doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title weather
        <link href="https://fonts.googleapis.com/css2?family=Hind+Vadodara:wght@700&display=swap" rel="stylesheet">
    body 
        //- script(src="./about.js") 
        .daybox 
            label
                input#switch_night(type="checkbox")
                .top 
                    .moon 
                    .cloud 
                        .rain 
                        .rain.rain2 
                        .rain.rain3 
                    svg.temsvg
                        circle(cx=0 cy=110 r=3)
                        text(x=0 y=110) 10°C
                        circle(cx=70 cy=90 r=3)
                        text(x=70 y=90) 12°C
                        circle(cx=140 cy=80 r=3)
                        text(x=140 y=80) 13°C
                        circle(cx=210 cy=90 r=3)
                        text(x=210 y=90) 12°C
                        circle(cx=280 cy=100 r=3)
                        text(x=280 y=100) 11°C
                        circle(cx=350 cy=110 r=3)
                        text(x=350 y=110) 10°C
                        circle(cx=420 cy=100 r=3)
                        //- text(x=420 y=100) 12°C
                        circle(cx=490 cy=110 r=3)
                        text(x=490 y=110) 10°C
                        circle(cx=560 cy=560 r=3)
                        text(x=560 y=560) 15°C
                        polyline(points="0,110 70,90 140,80 210,90 280,100 350,110 420,100 490,110 560,560")
                    .text_area 
                        .temperature 13°C
                        .infos 
                            .address 高雄市鳥松區 
                            .time 星期一 下午5:00
                .bottom
                    .dayweather
                        h3 MON 
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                    .dayweather
                        h3 TUE 
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                    .dayweather
                        h3 WED 
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                    .dayweather
                        h3 THUR 
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)
                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)
                    .dayweather
                        h3 FRI
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)
                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)
                    .dayweather
                        h3 SAT 
                        svg(viewbox="-63 -30 100 100")
                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)
                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)
                    .dayweather
                        h3 SUN 
                        svg(viewbox="-63 -30 100 100")
                            line.rain(x1=-25 y1=25 x2=-25 y2=45)
                            line.rain(x1=-14 y1=23 x2=-14 y2=40)
                            line.rain(x1=-5 y1=20 x2=-5 y2=45)

                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)
                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)

                        

        
        
        
        